doctype html 

html(lang=en)
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="css/style.css")
        title Forum Main Page
        
    header
        .nav-bar
    body 
        each topic in topics
            div
                h1=topic.topicName
                p=topic.topicDesc
                form(action="/api/forum/submitForumSubTopic" method="POST")
                    input(type="hidden" name='topicId' value=topic.topicId)
                    label(for='name') Sub Topic Name
                    input(type='text' id='name' name='name' required)
                    br
                    label(for='description') Sub Topic Description
                    textarea(id='description' name='description' required)
                    br
                    button(type="submit") Submit
                each subtopic in subTopics
                    if subtopic.inTopicId === topic.topicId
                        a(href=`/forum/subTopic/${subtopic.subTopicId}`)
                            h2= subtopic.subTopicName

    form(action="/api/forum/submitForumTopic" method="POST")
        label(for='name') Topic Name
        input(type='text' id='name' name='name' required)
        br
        label(for='description') Topic Description
        textarea(id='description' name='description' required)
        br
        button(type="submit") Submit